<form action="/countries/<%= @country.id %>" method="POST">
  <label for="name">Name:</label>
  <input class="button" required type="text" name="name" value="<%=@country.name%>">

  <label>Select the continent:</label>
    <select class="button" required name="continent_id" id="continent-id">
      <% for continent in @continents %>
        <option <%= "selected" if @country.continent == continent %> value="<%= continent.id %>"><%= continent.name %></option>
      <% end %>
    </select>

  <button class="button" type="submit" value="Add Country">Add Country</button>
</form>
